@page "/login"
@inject AuthService AuthService
@inject NavigationManager Nav

<h3>Login</h3>

<EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
    <InputText @bind-Value="loginModel.Username" placeholder="Username" class="form-control" />
    <InputText @bind-Value="loginModel.Password" placeholder="Password" class="form-control" type="password" />
    <button type="submit" class="btn btn-primary mt-2">Login</button>
</EditForm>

@code {
    private AuthenticationModel loginModel = new();

    private async Task HandleLogin()
    {
        var success = await AuthService.Login(loginModel);
        if (success)
        {
            Nav.NavigateTo("/accounts");
        }
    }
}
